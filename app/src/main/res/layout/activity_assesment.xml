<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schedulamon.vishnu.schedulamon.AssesmentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ass1Weight"
        android:text="Due : Week 1 Friday "
        android:textSize = "17dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/ass1Details"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ass1Due"
        android:text="Weight - 20%"
        android:textSize = "20dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/ass1Weight"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Assesment 1"
        android:id="@+id/ass1Details"
        android:textSize="45dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="60"
        android:progressDrawable="@drawable/custom_progressbar_drawable"
        android:secondaryProgress="0"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="60%"
        android:id="@+id/txtProgress"
        android:layout_marginTop="93dp"
        android:layout_marginLeft="30dp"
        android:textSize ="30dp"
        android:layout_alignTop="@+id/progressBar"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
